{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run selected Jest test",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test"],
      "args": [
        "node_modules/jest/bin/supertest.js",
        "--runInBand",
        "--runTestsByPath",
        "${relativeFile}"
      ],
      "console": "integratedTerminal"
    }
  ]
}
